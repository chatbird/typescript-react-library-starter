{
  "name": "typescript-react-library-starter",
  "version": "0.0.1",
  "description": "",
  "main": "main.js",
  "scripts": {
    "start": "webpack-dev-server --config webpack.demo.config.js",
    "build": "rm -r ./lib/* && tsc",
    "recompile": "tsc",
    "prepublish": "npm run build",
    "test": "./node_modules/.bin/jest"
  },
  "author": "Gerald Urschitz",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.1.3",
    "@types/enzyme": "^3.1.10",
    "@types/jest": "^22.2.3",
    "@types/react": "^16.3.14",
    "@types/react-dom": "^16.0.5",
    "@types/sinon": "^4.3.3",
    "babel-core": "^6.26.3",
    "babel-jest": "^22.4.4",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "chai": "^4.1.2",
    "css-loader": "^0.28.11",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^22.4.3",
    "jsdom": "^11.10.0",
    "mini-css-extract-plugin": "^0.4.0",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "regenerator-runtime": "^0.11.1",
    "sinon": "^5.0.7",
    "ts-jest": "^22.4.6",
    "ts-loader": "^4.3.0",
    "typescript": "^2.8.3",
    "webpack": "^4.8.3",
    "webpack-cli": "^2.1.3",
    "webpack-dev-server": "^3.1.4"
  },
  "files": [
    "lib",
    "LICENSE",
    "main.js"
  ],
  "jest": {
    "setupFiles": [
      "<rootDir>/test-setup.js"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/(?!transpile-me|transpile-me-too).+(js|jsx)$"
    ],
    "testEnvironment": "node",
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/src/**/*.spec.(ts|tsx|js)"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chatbird/typescript-react-library-starter.git"
  },
  "bugs": {
    "url": "https://github.com/chatbird/typescript-react-library-starter/issues"
  },
  "homepage": "https://github.com/chatbird/typescript-react-library-starter#readme",
  "types": "./lib/index.d.ts",
  "dependencies": {}
}
